meta {
  name: Login
  type: http
  seq: 1
}

post {
  url: {{base_url}}/api/v1/auth/login/
  body: json
  auth: none
}

body:json {
  {
    "email": "support@example.com",
    "password": "password123"
  }
}

script:post-response {
  if (res.status === 200) {
    // Only access_token is in response body (stored in memory by frontend)
    bru.setVar("access_token", res.body.access_token);
    // refresh_token is now in httpOnly cookie (auto-managed by Bruno)
  }
}
