meta {
  name: Admin Login
  type: http
  seq: 3
}

post {
  url: {{base_url}}/api/v1/auth/login/
  body: json
  auth: none
}

body:json {
  {
    "email": "admin@example.com",
    "password": "admin123"
  }
}

script:post-response {
  if (res.status === 200) {
    // Store access_token for Admin endpoints
    bru.setVar("admin_access_token", res.body.access_token);
    // refresh_token is in httpOnly cookie (auto-managed by Bruno)
  }
}
