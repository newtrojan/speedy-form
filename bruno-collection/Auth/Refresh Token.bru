meta {
  name: Refresh Token
  type: http
  seq: 3
}

post {
  url: {{base_url}}/api/v1/auth/refresh/
  body: none
  auth: none
}

script:post-response {
  if (res.status === 200) {
    bru.setVar("access_token", res.body.access_token);
  }
}

docs {
  Refresh token is read from httpOnly cookie automatically.
  No request body needed - backend reads from cookies.
}
