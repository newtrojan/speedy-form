# ===========================================
# Backend Environment Configuration
# ===========================================
# Copy this file to .env and fill in the values
# NEVER commit .env to version control
# ===========================================

# -----------------------------
# Django Core
# -----------------------------
DEBUG=True
SECRET_KEY=your-secret-key-here-generate-with-python-secrets
ALLOWED_HOSTS=localhost,127.0.0.1

# -----------------------------
# Database (PostgreSQL + PostGIS)
# -----------------------------
DATABASE_URL=postgis://postgres:postgres@db:5432/autoglass_db

# -----------------------------
# Redis (Celery broker + cache)
# -----------------------------
REDIS_URL=redis://redis:6379/0

# -----------------------------
# CORS & CSRF
# -----------------------------
CORS_ALLOWED_ORIGINS=http://localhost:3333,http://127.0.0.1:3333
CSRF_TRUSTED_ORIGINS=http://localhost:3333,http://127.0.0.1:3333

# -----------------------------
# Email
# -----------------------------
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=mailhog
EMAIL_PORT=1025
DEFAULT_FROM_EMAIL=noreply@autoglass.local

# -----------------------------
# Frontend URL (for email links)
# -----------------------------
FRONTEND_URL=http://localhost:3333

# -----------------------------
# Autobolt API (VIN Lookup)
# -----------------------------
AUTOBOLT_USER_ID=
AUTOBOLT_API_KEY=
AUTOBOLT_API_URL=https://autobolt.speedyautoparts.com
AUTOBOLT_CACHE_TTL_DAYS=30

# -----------------------------
# Google Geocoding API
# -----------------------------
GOOGLE_GEOCODING_API_KEY=

# -----------------------------
# NAGS Database (Parts Pricing)
# -----------------------------
# Optional - only needed if using NAGS pricing
NAGS_DB_HOST=
NAGS_DB_NAME=nags
NAGS_DB_USER=
NAGS_DB_PASSWORD=
NAGS_DB_PORT=3306

# -----------------------------
# Chatwoot (Omnichannel Messaging)
# -----------------------------
CHATWOOT_BASE_URL=https://your-chatwoot-instance.com
CHATWOOT_API_TOKEN=
CHATWOOT_ACCOUNT_ID=1
CHATWOOT_WEBHOOK_SECRET=

# Chatwoot Inbox IDs (channel-specific)
CHATWOOT_INBOX_ID=1
CHATWOOT_CHAT_INBOX_ID=1
CHATWOOT_EMAIL_INBOX_ID=
CHATWOOT_SMS_INBOX_ID=

# -----------------------------
# Logging
# -----------------------------
LOG_LEVEL=INFO

# ===========================================
# Production Settings (uncomment for prod)
# ===========================================
# DEBUG=False
# SECURE_SSL_REDIRECT=True
# SECURE_HSTS_SECONDS=31536000
# SESSION_COOKIE_SECURE=True
# CSRF_COOKIE_SECURE=True
